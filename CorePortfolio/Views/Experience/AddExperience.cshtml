@model EntityLayer.Concreate.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
  
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Tables</h4>
                <p class="card-description"> Yeni Deneyim Ekleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        <input type="text" class="form-control"  name="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih /Görev</label>
                        <input type="text" class="form-control" name="Date">
                    </div>
                    <div class="form-group">
                        <label>Görsel Url</label>
                        <input type="text" class="form-control" name="ImageUrl">
                    </div>
                  
                   
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Description"  rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

