@model EntityLayer.Concreate.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0"> Öne Çıkan Post Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x => x.FeatureID)
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Header, new { @class = "form-control"})
    <br />
    <label>İsim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
    <br />
    <label>Pozisyon</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control"})
    <br />
    <button class="btn btn-success">Kaydet</button>
}


